azul = #22BCE0
gris_oscuro = #444
gris_texto = #7A7A7A
naranja = #DD4F24

@font-face {
	font-family: 'iconos';
	src:url('../fonts/icomoon.eot?1k4ywo');
	src:url('../fonts/icomoon.eot?#iefix1k4ywo') format('embedded-opentype'),
		url('../fonts/icomoon.woff?1k4ywo') format('woff'),
		url('../fonts/icomoon.ttf?1k4ywo') format('truetype'),
		url('../fonts/icomoon.svg?1k4ywo#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a 
	color naranja

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px
	transition font-size 1s

footer
	background naranja
	color rgba(white, 0.5)
	padding 1em 0
	text-align center
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong
			display block

		.mejor
			&:before
			&:after
				content " - "

form
	display none
	padding .8em
	
	label
		display inline-block
		width 60px

	
header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 1

	.logo
		border-right 1px solid azul
		width 60px
		img
			width 52px

	.titular
		margin 0 60px 0 70px

		.filtro
			color azul
			font-size 14px
			font-weight bold
			font-style italic
			text-decoration none
		
		.publicar
			background naranja
			color white
			float right
			font-style italic
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black

			&:before
				font-family iconos
				content "\e600"
				margin-right 3px
		
		.sizer
			text-decoration none

		.titulo
			font-size 1.1em
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		top 8px
		right 10px
		width 68
		height 54
		.avatar
			margin 0 1.1em 0 0
			position relative
			z-index 2
			img
				border-radius 50%
				width 50px

		.flechita
			background naranja	
			color white
			display block
			padding 2px	
			position absolute
			text-align right
			right 0px
			text-decoration none
			top 17px
			width 50%

			&:after
				font-family iconos
				content "\e602"
				color white
				text-shadow 1px 1px 0 black
			
nav
	background azul
	border-left 15px solid white
	position relative
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		position absolute
		top 0
		left 0
	
	.menu
		height 40px
		line-height 40px
		margin 0
		overflow-x auto
		overflow-y hidden
		padding 0
		white-space nowrap
		
		
		li
			display inline-block

			a
				color white
				display inline-block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none


.posts
	padding 0.5em

	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin-bottom 0.5em

		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden

			.datos
				float right
			
				.comentarios
					background gris_oscuro
					border-radius 3px
					color white
					font-size 0.8em
					margin 0 1em 0 0 
					padding 0.2em 0.5em
					text-decoration none

				.estrella
					text-decoration none
					&:after
						color #FDB213
						font-family iconos
						content "\e601"
					


			.votos
				float left
				
				.down 
				.up
					text-decoration none

				.down
					color red

					&:before
						font-family iconos
						font-size 1.5em
						content "\e602"
						vertical-align bottom

				.up 
					color green
					&:before
						font-family iconos
						font-size 1.5em
						content "\e603"
						vertical-align bottom



		.descripcion
			color gris_texto

			.imagen
				float left
				margin 0
				
				img 
					height 160px
					vertical-align top
					width 120px
			.detalles
				height 160px
				margin-left 130px
				.autor
					margin 0.5em 0 2em 0

				.fecha
					float right
					font-size 0.9em
					margin 0 1em 0 0
				.tag
					background azul
					border-radius 0.5em 
					color white
					font-size 16px
					padding 0.2em  0.5em
					text-decoration none

				.titulo
					font-size 18px
					font-style italic
					color gris_oscuro
					margin 0
					padding 0.5em 0.5em 0 0


.left
	float left
.right
	float right


@media screen and (min-width: 768px)

	header 
		.titular
			.publicar
				position relative
				padding-left 3em
				&:before
					font-size 2.5em
					left 0
					position absolute
					top -10px
				
	.posts
		.post
			display inline-block
			vertical-align top
			width 48%
			&:nth-child(odd)
				margin-right 2%
